alias actualizar='sudo dnf update'
alias procurar='sudo dnf search'
alias questionar='sudo dnf list installed|grep'
alias instalar='sudo dnf install'
alias reinstalar='sudo dnf reinstall'
alias desinstalar='sudo dnf remove'
alias cache='sudo dnf clean all'

#alias pacotes-instalados="dpkg -l | grep ^ii | sed 's_  _\t_g' | cut -f 2"

alias grub-update='sudo grub2-mkconfig -o /boot/grub2/grub.cfg'

alias montar="sudo mount"
alias desmontar="sudo umount"

#alias kernels-listar="dpkg -l | grep ^ii | sed 's_  _\t_g' | cut -f 2|egrep 'linux-image|linux-headers'"

# KDE
EDITOR=/usr/bin/kwrite
VISUAL=$EDITOR
export EDITOR VISUAL

# XFCE
EDITOR=/usr/bin/mousepad
VISUAL=$EDITOR
export EDITOR VISUAL

alias ediroot="sudo $EDITOR"
alias edibash='$EDITOR ~/.bashrc'
